<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="12.dp"
    android:elevation="20.dp"
    android:background="@drawable/default_shape"
    android:backgroundTint="@color/onSurface"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="100.dp"
        android:layout_height="match_parent"
        android:background="@drawable/default_shape"
        android:backgroundTint="@color/onSurface"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mock_coffee_image"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12.dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Macchiato"
            android:textColor="@color/black"
            android:textSize="18.dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small, Oat milk"
            android:textSize="16.dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$9.40"
            android:textColor="@color/black"
            android:textSize="20.dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/default_shape"
        android:backgroundTint="@color/action"
        android:layout_gravity="end"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:background="@drawable/default_shape"
            android:backgroundTint="@color/action"
            android:padding="8.dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18.dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:background="@drawable/default_shape"
            android:backgroundTint="@color/action"
            android:padding="8.dp"
            />
    </LinearLayout>
</LinearLayout>